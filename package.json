{
  "name": "@ram_28/kf-ai-sdk",
  "version": "1.0.0",
  "description": "Type-safe, AI-driven SDK for building modern web applications with role-based access control",
  "author": "Ramprasad",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "sdk",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ramprasad-2809/kf-ai-sdk.git"
  },
  "homepage": "https://github.com/Ramprasad-2809/kf-ai-sdk#readme",
  "bugs": {
    "url": "https://github.com/Ramprasad-2809/kf-ai-sdk/issues"
  },
  "keywords": [
    "sdk",
    "react",
    "hooks",
    "typescript",
    "useForm",
    "useTable",
    "useKanban",
    "useFilter",
    "form-validation",
    "data-table",
    "kanban-board",
    "api-client",
    "type-safe"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite --config config/vite.config.js",
    "build": "vite build --config config/vite.config.js && tsc --project tsconfig.build.json",
    "preview": "vite preview --config config/vite.config.js",
    "lint": "eslint sdk --ext .ts,.tsx",
    "lint:fix": "eslint sdk --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.0.0-beta.68",
    "clsx": "^2.1.1",
    "react-hook-form": "^7.48.2",
    "tailwind-merge": "^3.4.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "@tanstack/react-query": "^5.0.0"
  },
  "devDependencies": {
    "@tanstack/react-query": "^5.17.0",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "react": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "csstype": "3.1.3"
  }
}
